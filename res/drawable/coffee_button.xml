<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/machalightgreen"
                android:endColor="@color/machadarkgreen"
                android:angle="270" />
            <stroke
                android:width="5dp"
                android:color="@color/black" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/coffeelightbrown"
                android:startColor="@color/coffeemediumbrown"
                android:angle="270" />
            <stroke
                android:width="5dp"
                android:color="@color/black" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/coffeelightbrown"
                android:startColor="@color/coffeelightbrown"
                android:angle="270" />
            <stroke
                android:width="5dp"
                android:color="@color/black" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
