<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_root" android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:padding="5px">
		
	<EditText android:id="@+id/nametext" 
		android:layout_width="fill_parent"
		android:layout_margin="4px"
		android:layout_marginTop="0px"
		android:layout_height="wrap_content" 
		android:textColor="#000"/>
		
	<Spinner android:id="@+id/typeselect"
		android:layout_below="@id/nametext"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5px"
		android:gravity="center_horizontal"
		/>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/button_lin_container" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingTop="8px"
		android:padding="0px" android:layout_below="@id/typeselect">
		
		<Button android:id="@+id/ok"
			android:layout_margin="6px"
			android:layout_marginRight="2px"
			android:padding="0px"
			android:layout_width="0pt" 
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_weight="1"
			android:text="OK" />
		<Button android:id="@+id/cancel"
			android:layout_margin="6px"
			android:layout_marginLeft="2px"
			android:padding="0px"
			android:layout_width="0pt"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_weight="1"
			android:text="Cancel" />
	</LinearLayout>
</RelativeLayout>
