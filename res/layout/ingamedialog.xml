<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_root" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:padding="5px">
		
	<TextView android:id="@+id/dialogtext" 
		android:layout_width="fill_parent"
		android:layout_margin="10dp"
		android:layout_height="wrap_content" 
		android:text="What would you like to do?"
		style="@style/dialogtexttext"/>


	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/button_lin_container" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:padding="8dp">
		
		<Button android:id="@+id/mainmenubutton"
			android:layout_margin="2dp"
			android:layout_marginLeft="4dp"
			android:padding="15dp"
			android:layout_width="0pt" 
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_weight="1"
			android:background="@drawable/coffee_button"
			style="@style/dialogbuttontext"
			android:text="Main Menu" />
		
		<Button android:id="@+id/retrylevelbutton"
			android:layout_margin="2dp"
			android:padding="15dp"
			android:layout_width="0pt" 
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_weight="1"
			android:background="@drawable/coffee_button"
			style="@style/dialogbuttontext"
			android:text="Retry Level" />
		
		<Button android:id="@+id/continuebutton"
			android:layout_margin="2dp"
			android:layout_marginRight="4dp"
			android:padding="15dp"
			android:layout_width="0pt" 
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_weight="1"
			android:background="@drawable/coffee_button"
			style="@style/dialogbuttontext"
			android:text="Continue Game" />
	</LinearLayout>
</LinearLayout>
